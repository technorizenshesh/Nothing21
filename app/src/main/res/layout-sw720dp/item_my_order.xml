<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImg"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_90sdp"
                app:cardCornerRadius="@dimen/_12sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivImg"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/img_one"
                        android:scaleType="fitXY"/>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/cardImg"
                android:layout_marginLeft="@dimen/_5sdp"
                android:padding="@dimen/_3sdp">

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Cosy Borg Jacket"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/tvProductYears"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="(3 months-7 years)"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:layout_marginTop="-3dp"
                    android:singleLine="true"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvProductSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Size: 4-5 years"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/tvProductQnty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Quantity: 1"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:visibility="gone"
                    />


                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="SOLD OUT"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:visibility="gone"/>



                <RelativeLayout
                    android:id="@+id/layoutM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="ALDO"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_toRightOf="@+id/tvProductPrice"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="AED98.00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />


                </RelativeLayout>



                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="SOLD OUT"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/color_red"
                    android:maxLines="2"
                    android:singleLine="false"/>


                <RelativeLayout
                    android:id="@+id/layoutDelete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/btnDelete"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_delete"
                        android:padding="@dimen/_3sdp"/>

                </RelativeLayout>


            </LinearLayout>

