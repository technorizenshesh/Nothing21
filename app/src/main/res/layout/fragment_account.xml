<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.core.widget.NestedScrollView
      android:id="@+id/viewScroll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

      <RelativeLayout
          android:id="@+id/layoutHeader"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_18sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_18sdp"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="Hi, Ahmadwael 189"
            android:layout_toLeftOf="@+id/tvLogout"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />



      </RelativeLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:orientation="horizontal"
          android:weightSum="1">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical">

          <TextView
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp"
              android:fontFamily="@font/poppinsmedium"
              android:gravity="center"
              android:text="1"
              android:textColor="@color/black"
              android:textSize="@dimen/_12sdp" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/vouchers"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical">

          <TextView
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp"
              android:fontFamily="@font/poppinsmedium"
              android:gravity="center"
              android:text="0"
              android:textColor="@color/black"
              android:textSize="@dimen/_12sdp" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/points"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical">

          <RelativeLayout
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:alpha=".5"
                android:src="@drawable/ic_wallet"
                app:tint="@color/black" />


          </RelativeLayout>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/wallet"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical">

          <RelativeLayout
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:alpha=".5"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_gift_card"
                app:tint="@color/black" />


          </RelativeLayout>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/vouchers"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>


      </LinearLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/_5sdp"
          android:background="@color/grey_bg" />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_18sdp"
          android:layout_marginTop="@dimen/_20sdp"
          android:layout_marginEnd="@dimen/_18sdp"
          android:fontFamily="@font/poppins_semibold"
          android:gravity="center"
          android:text="@string/my_orders"
          android:textColor="@color/black"
          android:textSize="@dimen/_13sdp" />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:orientation="horizontal"
          android:weightSum="3">


        <LinearLayout
            android:id="@+id/layoutProcessing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <RelativeLayout
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_processing"
                app:tint="@color/black" />


          </RelativeLayout>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/processing"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <RelativeLayout
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_shiped"
                app:tint="@color/black" />


          </RelativeLayout>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/shiped"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <RelativeLayout
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_returns"
                app:tint="@color/black" />


          </RelativeLayout>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/returns"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>


      </LinearLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/_5sdp"
          android:background="@color/grey_bg" />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_18sdp"
          android:layout_marginTop="@dimen/_20sdp"
          android:layout_marginEnd="@dimen/_18sdp"
          android:fontFamily="@font/poppins_semibold"
          android:gravity="center"
          android:text="@string/more_services"
          android:textColor="@color/black"
          android:textSize="@dimen/_13sdp" />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:orientation="horizontal"
          android:weightSum="3">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <RelativeLayout
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_support"
                app:tint="@color/black" />


          </RelativeLayout>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/support"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <RelativeLayout
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_pending_support"
                app:tint="@color/black" />


          </RelativeLayout>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/panding_support"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

          <RelativeLayout
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              android:background="@drawable/circle_white_gray_border_bg"
              android:elevation="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_share_earn"
                app:tint="@color/black" />


          </RelativeLayout>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_9sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              android:fontFamily="@font/poppins_regular"
              android:gravity="center"
              android:text="@string/share_earn"
              android:textColor="@color/black"
              android:textSize="@dimen/_9sdp" />


        </LinearLayout>


      </LinearLayout>


      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/_5sdp"
          android:background="@color/grey_bg" />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_40sdp"
          android:elevation="@dimen/_5sdp"
          android:orientation="horizontal"
          android:weightSum="1">

        <TextView
            android:id="@+id/tvWishList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/wishlist"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/recently_view"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/grey_bg" />


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvFavList"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/_5sdp"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>



        <TextView
            android:id="@+id/tvFound"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_13sdp"
            android:text="not available"
            android:layout_margin="@dimen/_20sdp"
            android:visibility="gone"/>


      </RelativeLayout>

    </LinearLayout>

  </androidx.core.widget.NestedScrollView>
</layout>