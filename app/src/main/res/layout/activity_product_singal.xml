<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_500sdp"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/llMain"
                        >

                        <ImageView
                            android:id="@+id/ivImg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_450sdp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/dummy"
                            android:visibility="gone"/>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvItems"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



                    </RelativeLayout>





                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/ivShare"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:elevation="@dimen/_2sdp"
                            android:src="@drawable/share" />




                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:background="@drawable/rounded_white15_bg"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:text="ALDO"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/tvOffer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/rounded_white15_bg"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:text="Offer"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />


                        <ImageView
                            android:id="@+id/ivLike"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:elevation="@dimen/_2sdp"
                            android:src="@drawable/ic_white_heart" />


                    </RelativeLayout>




                    <RelativeLayout
                        android:id="@+id/llMain"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_above="@+id/llMain2"
                        android:visibility="visible">


                        <ImageView
                            android:id="@+id/ivInfo"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:elevation="@dimen/_2sdp"
                            android:src="@drawable/ic_blck_info" />


                        <ImageView
                            android:id="@+id/ivCart"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/ivInfo"
                            android:elevation="@dimen/_2sdp"
                            android:src="@drawable/ic_white_cart" />






                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/rounded_white15_bg"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:text="AED98.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone"
                            />

                        <RelativeLayout
                            android:id="@+id/layoutM"
                            android:layout_width="match_parent"
                            android:layout_toRightOf="@+id/ivCart"
                            android:layout_toLeftOf="@+id/layoutRatting"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:gravity="center">


                            <TextView
                                android:id="@+id/tvProductPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="ALDO"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/tvOldPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_toRightOf="@+id/tvProductPrice"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:text="AED98.00"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_7sdp"
                                android:visibility="gone" />


                        </RelativeLayout>


                        <ImageView
                            android:id="@+id/ivIn"
                            android:layout_width="@dimen/_30sdp"
                            android:padding="@dimen/_2sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:elevation="@dimen/_2sdp"
                            android:src="@drawable/ic_size"


                            android:visibility="gone"/>


                        <LinearLayout
                            android:id="@+id/layoutRatting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">

                            <RatingBar
                                android:id="@+id/RatingBar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:progressTint="@color/quantum_yellow"
                                android:rating="3" />


                            <TextView
                                android:id="@+id/viewRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:layout_toRightOf="@+id/RatingBar"
                                android:fontFamily="@font/poppins_bold"
                                android:text="(22)"

                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_8sdp" />



                        </LinearLayout>








                        <ImageView
                            android:id="@+id/ivColor"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:elevation="@dimen/_2sdp"
                            android:src="@drawable/ic_color"
                            android:visibility="gone"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/llMain2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_marginTop="-12dp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_10sdp">


                        <LinearLayout
                            android:id="@+id/layoutColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:id="@+id/layoutOne"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center">


                                <com.nothing21.utils.CircularTextView
                                    android:id="@+id/view1"
                                    android:layout_width="@dimen/_14sdp"
                                    android:layout_height="@dimen/_14sdp"
                                    android:layout_centerInParent="true" />


                                <com.nothing21.utils.CircularTextView
                                    android:id="@+id/view11"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_centerInParent="true" />


                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/layoutTwo"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center">


                                <com.nothing21.utils.CircularTextView
                                    android:id="@+id/view2"
                                    android:layout_width="@dimen/_14sdp"
                                    android:layout_height="@dimen/_14sdp"
                                    android:layout_centerInParent="true" />


                                <com.nothing21.utils.CircularTextView
                                    android:id="@+id/view22"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_centerInParent="true" />


                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/layoutThree"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center">


                                <com.nothing21.utils.CircularTextView
                                    android:id="@+id/view3"
                                    android:layout_width="@dimen/_14sdp"
                                    android:layout_height="@dimen/_14sdp" />


                                <com.nothing21.utils.CircularTextView
                                    android:id="@+id/view33"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_centerInParent="true" />


                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/layoutFour"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center">


                                <com.nothing21.utils.CircularTextView
                                    android:id="@+id/view4"
                                    android:layout_width="@dimen/_14sdp"
                                    android:layout_height="@dimen/_14sdp" />


                                <com.nothing21.utils.CircularTextView
                                    android:id="@+id/view44"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_centerInParent="true" />


                            </RelativeLayout>


                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvProName"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center_horizontal"
                            android:layout_centerInParent="true"
                            android:singleLine="true"
                            android:layout_toRightOf="@+id/layoutColor"
                            android:layout_toLeftOf="@+id/rvSize"   />



                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSize"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_size_color" />
                    </RelativeLayout>





                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/viqq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_product"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"/>






        </LinearLayout>




    </androidx.core.widget.NestedScrollView>


</layout>